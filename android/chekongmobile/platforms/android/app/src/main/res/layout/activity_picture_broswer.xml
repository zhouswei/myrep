<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureBroswerActivity">
    <RelativeLayout
        android:id="@+id/title_lan_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title_bc">
        <TextView
            android:id="@+id/tv_title_id"
            android:text="大图浏览"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_id"
            android:background="@null"
            android:src="@mipmap/back"/>
        <Button
            android:id="@+id/commit_id"
            android:text="删除"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="30dp" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/image_id"
        android:src="@mipmap/icon"
        android:scaleType="fitXY"
        android:layout_below="@+id/title_lan_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>