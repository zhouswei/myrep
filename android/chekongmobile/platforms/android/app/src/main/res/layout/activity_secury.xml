<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/title_lan_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title_bc">
        <TextView
            android:id="@+id/tv_title_id"
            android:text="安全巡查上报"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_id"
            android:background="@null"
            android:src="@mipmap/back"/>
        <Button
            android:id="@+id/commit_id"
            android:text="提交"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="30dp" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spanner_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_lan_id"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"/>
    <RelativeLayout
        android:id="@+id/line_id"
        android:layout_below="@+id/spanner_id"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/input_id"
        android:layout_below="@+id/line_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:maxLength="500"
        android:inputType="textMultiLine"
        android:hint="请输入反馈内容..." />

    <GridView

        android:layout_below="@+id/input_id"
        android:numColumns="3"
        android:padding="20dp"
        android:id="@+id/grid_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>